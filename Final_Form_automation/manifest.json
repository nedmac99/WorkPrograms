{
  "manifest_version": 3,
  "name": "Stratus Form Automation Helper",
  "version": "1.2.60",
  "description": "Automates multi-step internal forms with dry-run support",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["automation.js", "content.js"],
    "run_at": "document_idle",
    "all_frames": true
  }
]

}
